<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    @RenderSection("head", required: false)
    <link rel="stylesheet" href="~/Content/bootstrap.css"/>
    <link rel="stylesheet" href="~/Content/DataTables/css/dataTables.bootstrap.css" />
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootbox.js"></script>
    <script src="~/Scripts/bootbox.min.js"> </script>
    <script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.js"></script>
    <script src="~/Scripts/typeahead.bundle.js"></script>
    <link rel="stylesheet" href="~/Content/TypeAhead.css" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
        <a class="navbar-brand" href="/home/index">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/home/index">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/customers/index">Customers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/movies/index">Movies</a>
                </li>

                @if (Session["CurrentCustomerName"] == null)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/customers/register">Register</a>
                    </li>




                }

                @if (Session["CurrentCustomerName"] != null)
                {
                    string name = (string)Session["CurrentCustomerName"];
                    <li>@name</li>
                    <li class="nav-item">
                        <a class="nav-link" href="/customers/Edit">Edit Profile</a>
                    </li>


                }

                <li class="nav-item">
                    <a class="nav-link" href="/Rentals/new">Login</a>
                </li>

            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    @RenderBody()
</body>
</html>
